<div class="button-container">
    <button class="button button1" onclick="changeColor(this)">Bot찾o 1</button>
    <button class="button button2" onclick="changeColor(this)">Bot찾o 2</button>
    <button class="button button3" onclick="changeColor(this)">Bot찾o 3</button>
</div>

<script>
    function changeColor(button) {
        // Altera a cor de fundo ao clicar
        if (button.style.backgroundColor === 'gray') {
            button.style.backgroundColor = ''; // Reseta para a cor original
        } else {
            button.style.backgroundColor = 'gray'; // Altera para cinza
        }
    }
</script>

